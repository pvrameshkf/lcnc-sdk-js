{
  "version": "0.2",
  "language": "en",
  "words": ["CMDS", "kf", "kissflow", "kolorist", "sdk"],
  "ignoreWords": [],
  "ignorePaths": ["node_modules", "dist"],
  "dictionaries": ["typescript", "node", "javascript"],
  "ignoreRegExpList": [
    "/\\/\\/.*$/", // Ignore comments
    "/https?:\\/\\/[^\\s]+/", // Ignore URLs
    "/^\\/\\*.*\\*\\//" // Ignore multi-line comments
  ],
  "patterns": [
    {
      "name": "camelCase",
      "pattern": "/[a-z]+([A-Z][a-z]+)+/"
    }
  ]
}
